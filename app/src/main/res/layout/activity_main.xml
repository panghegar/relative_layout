<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/gradient">

    <ImageView
        android:id="@+id/back_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_arrow_back_ios_24"
        app:tint="#FFDB00"
        android:layout_marginTop="20dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        />

    <TextView
        android:id="@+id/judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sunset di tanah anarki"
        android:textColor="#FFDB00"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/more_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_more_vert_24"
        app:tint="#FFDB00"
        android:layout_marginTop="20dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="40dp"
        />
    <ImageView
        android:id="@+id/cover"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_below="@+id/judul"
        android:src="@drawable/rectangle6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        />

    <ImageView
        android:id="@+id/line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/line2"
        android:layout_below="@id/cover"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        />
    <ImageView
        android:id="@+id/elipse1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ellipse1"
        android:layout_toLeftOf="@+id/line"
        android:layout_below="@id/line"
        android:layout_marginTop="-10dp"
        android:layout_marginRight="-20dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/elipse2"
        android:src="@drawable/ellipse2"
        android:layout_toLeftOf="@id/line"
        android:layout_below="@id/line"
        android:layout_marginTop="-5dp"
        android:layout_marginRight="-15dp"
        />
    <TextView
        android:id="@+id/singer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Superman is Dead"
        android:layout_below="@id/line"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/orange"
        android:textSize="20sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/anarki"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sunset di Tanah Anarki"
        android:layout_below="@id/singer"
        android:textColor="@color/yellow"
        android:textSize="22dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        />
    <ImageView
        android:id="@+id/btn_orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ellipse3"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/anarki"
        android:layout_marginTop="70dp"
        />
    <ImageView
        android:id="@+id/btn_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_play_"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btn_orange"
        android:layout_marginTop="-40dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/preveus"
        android:src="@drawable/icon_skipnext_left"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btn_orange"
        android:layout_toLeftOf="@+id/btn_orange"
        android:layout_marginTop="-39dp"
        android:paddingRight="50dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/next"
        android:src="@drawable/icon_skipnext_right"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btn_orange"
        android:layout_marginTop="-39dp"
        android:paddingLeft="180dp"
        />
